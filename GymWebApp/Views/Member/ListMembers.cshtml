@using GymWebApp.Models.Member;
@model List<MemberViewModel>

<h2>Members List</h2>


<body>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 w-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Add New Member</h5>
                    <p class="card-text">Click here to add a new member.</p>
                    <a data-toggle="modal" data-target="#addMemberModal" href="@Url.Action("Create", "Member")" class="btn btn-success mt-auto">Add Member</a>
                </div>
            </div>
        </div>

        @foreach (var member in Model)
        {
            @await Html.PartialAsync("_MemberCard", member)
        }
    </div>
</body>
