@using GymDomain.Entities;

@model List<Subscription>

<h2>Subscriptions List</h2>

<body>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 w-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Add New Subscription</h5>
                    <p class="card-text">Click here to add a new subscription.</p>
                    <a href="@Url.Action("Create", "Subscription")" class="btn btn-success mt-auto">Add Subscription</a>
                </div>
            </div>
        </div>

        @foreach (var subscription in Model)
        {
            @await Html.PartialAsync("_SubscriptionDetailsCard", subscription)
        }
    </div>
</body>
